<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_alignParentBottom="true">


    <ImageView
        android:id="@+id/i_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/i_filter"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView android:layout_width="match_parent"
              android:maxLines="3"
              android:id="@+id/tv_des"
              android:text=""
              android:background="@drawable/shape_spec"
              android:textColor="@color/color_write"
              android:textSize="16sp"
              android:ellipsize="end"
              android:padding="10dp"
              android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/i_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/amz_shadow"/>

    <View
        android:id="@+id/v_underline"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_alignParentBottom="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/i_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/color_eaeaea"
        android:layout_above="@+id/v_underline"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_bird"/>

    <TextView
        android:id="@+id/t_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_underline"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_toRightOf="@+id/i_icon"
        android:textColor="@color/color_eaeaea"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/t_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_underline"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="12dip"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="12dip"
        android:layout_toRightOf="@+id/i_icon"
        android:textColor="@color/color_ededed"
        android:textSize="16sp"/>

</RelativeLayout>