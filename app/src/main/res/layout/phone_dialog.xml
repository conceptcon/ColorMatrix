<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimens_20"
        android:background="@drawable/shape_phone_dialog_bg"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_phone_name"
            android:text=""
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/dimens_10"
            android:textColor="@color/color_82000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include layout="@layout/include_line_no_marg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dimens_10"
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_phone_number"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/color_82000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_phone_business"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/color_82000000"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <include layout="@layout/include_line_no_marg"/>
        <TextView
            android:id="@+id/tv_phone_place"
            android:text=""
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_marginBottom="@dimen/dimens_10"
            android:textSize="18sp"
            android:textColor="@color/color_2c2c2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include layout="@layout/include_line_no_marg"/>
        <TextView
            android:id="@+id/tv_phone_email"
            android:text=""
            android:layout_marginTop="@dimen/dimens_10"
            android:textSize="18sp"
            android:textColor="@color/color_2c2c2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>