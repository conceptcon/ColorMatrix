<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/color_1296db"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/dimens_50">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ci"
                    android:layout_marginLeft="@dimen/dimens_5"
                    android:padding="@dimen/dimens_5"
                    android:src="@mipmap/snail_image"
                    android:layout_width="@dimen/dimens_50"
                    android:layout_height="@dimen/dimens_50" />
                <TextView
                    android:text="Matrix Photo"
                    android:textSize="14sp"
                    android:textColor="@color/color_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>s
            <include layout="@layout/include_line_no_marg"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="@dimen/dimens_5"
                android:src="@mipmap/tool_icon"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="@dimen/dimens_50" />
            <TextView
                android:text="这个推荐很神秘"
                android:id="@+id/tv_re"
                android:textColor="@color/color_bd2e4eef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dimens_5"
                android:text="扫一扫，你就知道"
                android:textSize="18sp"
                android:textColor="@color/color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_green"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/blue_app_store"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimens_10"
                    android:textColor="@color/color_whit"
                    android:text="这是一个神奇的二维码"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:background="@color/color_whit"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/dimens_50">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/header"
                        android:layout_marginLeft="@dimen/dimens_10"
                        android:padding="@dimen/dimens_8"
                        android:src="@mipmap/tool_icon_black"
                        android:layout_width="@dimen/dimens_50"
                        android:layout_height="@dimen/dimens_50" />
                    <TextView
                        android:id="@+id/tv_tool_con"
                        android:layout_toRightOf="@+id/header"
                        android:text="Matrix Photo"
                        android:textSize="18sp"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@+id/header"
                        android:layout_below="@+id/tv_tool_con"
                        android:text="集娱乐生活工具"
                        android:textSize="14sp"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>