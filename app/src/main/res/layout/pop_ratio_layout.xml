<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_gif_ratio_bg"
    android:layout_height="match_parent">
    <TextView
        android:text="请选择比例"
        android:textColor="@color/color_2b2b2b"
        android:paddingLeft="@dimen/dimens_10"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50" />
    <include layout="@layout/include_line_no_marg"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_any"
                android:text="任意比例"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_50" />
            <include layout="@layout/include_line_no_marg"/>
            <TextView
                android:id="@+id/tv_1to1"
                android:text="1:1"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_50" />
            <include layout="@layout/include_line_no_marg"/>
            <TextView
                android:id="@+id/tv_1to2"
                android:text="1:2"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_50" />
            <include layout="@layout/include_line_no_marg"/>
            <TextView
                android:id="@+id/tv_2to1"
                android:text="2:1"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_50" />
            <include layout="@layout/include_line_no_marg"/>
            <TextView
                android:id="@+id/tv_4to3"
                android:text="4:3"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_50" />
            <include layout="@layout/include_line_no_marg"/>
            <TextView
                android:id="@+id/tv_16to9"
                android:text="16:9"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_50" />
            <include layout="@layout/include_line_no_marg"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>