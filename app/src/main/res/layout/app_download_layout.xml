<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_contain"
        android:paddingBottom="@dimen/dimens_10"
        android:paddingTop="@dimen/dimens_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginLeft="@dimen/dimens_10"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dimens_50"
            android:layout_height="@dimen/dimens_50" />
        <TextView
            android:layout_toRightOf="@+id/iv_icon"
            android:id="@+id/tv_pro"
            android:text="正在下载"
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_below="@+id/tv_pro"
            android:layout_marginRight="@dimen/dimens_10"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_marginTop="@dimen/dimens_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/progressbar"
            android:id="@+id/tv_product"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>