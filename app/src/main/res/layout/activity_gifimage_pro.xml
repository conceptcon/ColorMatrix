<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_black"
    tools:context=".gif_module.activity.GIFImageProActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50">
            <ImageView
                android:id="@+id/iv_back"
                android:src="@mipmap/ic_back"
                android:padding="@dimen/dimens_12"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_title"
                android:ellipsize="marquee"
                android:focusable="true"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:focusableInTouchMode="true"
                android:layout_centerInParent="true"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_share"
                android:src="@mipmap/icon_share"
                android:layout_alignParentRight="true"
                android:padding="14dp"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_gallary"
                android:src="@mipmap/icon_gif_gallary"
                android:layout_toLeftOf="@id/iv_share"
                android:padding="@dimen/dimens_12"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <include layout="@layout/include_line_no_marg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dimens_50"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimens_80"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/giv1"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="@dimen/dimens_80">
       <TextView
           android:layout_width="match_parent"
           android:layout_marginLeft="0dp"
           android:background="@color/color_8a8a8a"
           android:layout_gravity="center_vertical"
           android:layout_height="1dp">
       </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_30">
        <ImageView
            android:id="@+id/iv_control"
            android:paddingTop="@dimen/dimens_5"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_video_pause"
            android:layout_width="@dimen/dimens_35"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_download"
            android:src="@mipmap/dowmload"
            android:paddingTop="@dimen/dimens_5"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimens_35"
            android:layout_height="match_parent" />
    </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <SeekBar
               android:id="@+id/seekbar"
               android:layout_width="match_parent"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/dimens_10"
               android:layout_marginRight="@dimen/dimens_70"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_alignParentRight="true"
               android:textColor="@color/color_whit"
               android:text="速度"
               android:gravity="center"
               android:layout_width="@dimen/dimens_60"
               android:layout_height="match_parent" />
       </RelativeLayout>
   </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_load"
        android:visibility="visible"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/color_a1b6b6b6"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/av_load"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            app:indicatorName="BallTrianglePathIndicator"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/tv_load"
            android:layout_below="@+id/av_load"
            android:layout_marginTop="@dimen/dimens_10"
            android:text="加油奔跑中。。。"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>