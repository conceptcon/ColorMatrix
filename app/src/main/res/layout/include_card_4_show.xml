<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/dimens_50">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci"
            android:padding="@dimen/dimens_5"
            android:layout_marginLeft="@dimen/dimens_5"
            android:src="@mipmap/tool_icon_black"
            android:layout_width="@dimen/dimens_50"
            android:layout_height="@dimen/dimens_50" />
        <TextView
            android:text="Matrix Photo"
            android:textSize="14sp"
            android:textColor="@color/color_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/include_line_no_marg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="@dimen/dimens_8"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_20"
            android:background="@color/color_003af"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/dimens_40"
                android:text="这个推荐很神秘"
                android:id="@+id/tv_re"
                android:textColor="@color/color_bd2e4eef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tool_con"
                android:layout_marginTop="@dimen/dimens_8"
                android:text="Matrix Photo"
                android:textSize="20sp"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dimens_3"
                android:text="扫一扫，你就知道"
                android:textSize="18sp"
                android:textColor="@color/color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="集娱乐生活工具"
                android:layout_marginTop="@dimen/dimens_8"
                android:textSize="14sp"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_green"
                    android:layout_centerInParent="true"
                    android:src="@drawable/green_app_store"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimens_10"
                    android:textColor="@color/color_whit"
                    android:text="这是一个神奇的二维码"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_width="50dp"
            android:src="@mipmap/snail_image"
            android:layout_height="@dimen/dimens_50" />
    </RelativeLayout>
</LinearLayout>