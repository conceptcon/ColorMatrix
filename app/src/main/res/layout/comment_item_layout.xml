<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci_header"
            android:layout_width="@dimen/dimens_35"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dimens_35" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/color_text"
            android:layout_toRightOf="@id/ci_header"
            android:layout_marginRight="@dimen/dimens_50"
            android:layout_marginLeft="@dimen/dimens_3"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_like"
            android:paddingLeft="2dp"
            android:textColor="@color/color_8c8c8c"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_toLeftOf="@+id/tv_like"
            android:id="@+id/iv_like"
            android:src="@mipmap/icon_like_circle"
            android:layout_marginRight="@dimen/dimens_5"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimens_25"
            android:layout_height="@dimen/dimens_25" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimens_10"
        android:textSize="15sp"
        android:textColor="@color/color_8c8c8c"
        android:paddingTop="@dimen/dimens_3"
        android:paddingBottom="@dimen/dimens_12"
        android:paddingRight="@dimen/dimens_10"
        android:layout_height="wrap_content" />
    <include layout="@layout/include_line_no_marg"/>
</LinearLayout>