<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottombar_bg"
        android:layout_height="85dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_messg"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_40"
                android:layout_marginBottom="@dimen/dimens_5"
                android:layout_marginTop="5dip"
                android:layout_weight="1.0"
                android:hint="message"
                android:textColorHint="@color/color_2b2b2b"
                android:background="@drawable/chat_bottombar_input"
                android:imeOptions="actionSend"
                android:singleLine="true"
                android:maxHeight="68dp"
                android:paddingBottom="4.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="14.0dip"
                android:paddingTop="4.0dip"
                android:textSize="16.0sp" />
            <RelativeLayout
                android:layout_width="@dimen/dimens_55"
                android:layout_height="@dimen/dimens_40"
                android:clickable="true">
                <Button
                    android:id="@+id/send_btn"
                    android:layout_width="42.0dip"
                    android:layout_height="34.0dip"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="4.0dip"
                    android:background="@drawable/chat_bottombar_btn_selector"
                    android:shadowColor="#ff568ab5"
                    android:shadowDx="0.0"
                    android:shadowRadius="0.2"
                    android:text="发送"
                    android:textColor="@color/color_eaeaea"
                    android:textSize="14.0sp" />
                <Button
                    android:id="@+id/bt_add"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="4.0dip"
                    android:background="@mipmap/icon_msg_add"
                    android:textColor="@color/color_eaeaea"
                    android:textSize="14.0sp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="5"
            android:layout_marginBottom="@dimen/dimens_3"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_photo"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@mipmap/icon_gif_image"
                android:layout_height="@dimen/dimens_30" />
            <ImageView
                android:id="@+id/iv_voice"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@mipmap/icon_gif_image"
                android:layout_height="@dimen/dimens_30" />
            <ImageView
                android:id="@+id/iv_emoje"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@mipmap/icon_gif_image"
                android:layout_height="@dimen/dimens_30" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_contain"
        android:visibility="gone"
        android:background="@color/color_whit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_210">
    </FrameLayout>
</LinearLayout>